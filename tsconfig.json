{
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2015", "es6", "esnext"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "declarationDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "."
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
